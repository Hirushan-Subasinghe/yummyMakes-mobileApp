<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity">
    <!--IM/2021/101 - Hirushan start-->

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="43dp"
                android:layout_height="29dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/back_ico" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:fontFamily="@font/inter_24pt_bold"
                android:text="Forgot Password ?"
                android:textColor="#FF7F53"
                android:textSize="40sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/backBtn"
                app:layout_constraintTop_toBottomOf="@+id/backBtn" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="221dp"
                android:layout_height="214dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:srcCompat="@drawable/contact_with_us" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:fontFamily="@font/inter_18pt_regular"
                android:text="Enter your email for the verification process,  we will send code to your email"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@+id/imageView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/inter_18pt_regular"
                android:text="Email"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView3"
                app:layout_constraintStart_toStartOf="@+id/textView3"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

            <EditText
                android:id="@+id/in_email"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:fontFamily="@font/inter_18pt_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:textColor="#626262"
                android:textColorHint="#626262"
                app:layout_constraintEnd_toEndOf="@+id/textView4"
                app:layout_constraintHorizontal_bias="0.607"
                app:layout_constraintStart_toStartOf="@+id/textView4"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <EditText
                android:id="@+id/in_password"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/input_bg"
                android:ems="10"
                android:fontFamily="@font/inter_18pt_regular"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="13dp"
                android:paddingRight="20dp"
                android:paddingBottom="13dp"
                android:textColor="#626262"
                android:textColorHint="#626262"
                app:layout_constraintEnd_toEndOf="@+id/in_email"
                app:layout_constraintStart_toStartOf="@+id/in_email"
                app:layout_constraintTop_toBottomOf="@+id/in_email" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FF7F53"
                android:fontFamily="@font/inter"
                android:text="Continue"
                android:textColor="#FDFDFD"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@+id/in_password"
                app:layout_constraintStart_toStartOf="@+id/in_password"
                app:layout_constraintTop_toBottomOf="@+id/in_password" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <!--IM/2021/101 - Hirushan end-->


</androidx.constraintlayout.widget.ConstraintLayout>