<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/yummy_btn_menu_fill"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_hovered="true">
        <shape>
            <solid android:color="@color/yummy_btn_menu_fill"/>
            <stroke
                android:width="3dp"
                android:color="@color/yummy_btn_menu_outline_active"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/yummy_btn_menu_fill"/>
            <stroke
                android:width="3dp"
                android:color="@color/yummy_btn_menu_outline_active"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/yummy_btn_menu_fill"/>
            <stroke
                android:width="3dp"
                android:color="@color/yummy_btn_menu_outline"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
</selector>
